# Application Configuration
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Recruiting Dashboard"

# API Configuration
VITE_API_URL=http://localhost:8084/api
VITE_API_TIMEOUT=30000

# Development-only settings (optional)
# VITE_DEV_TOKEN=your-test-token  # If needed for local testing
# VITE_DEV_TENANT=your-test-tenant # If needed for local testing

# Mock Service Worker (MSW) Toggle
# Set to 'true' to use MSW mocks instead of real API calls (useful for development when backend is not available)
VITE_USE_MOCKS=false
# Enable MSW mocks in development when backend is unavailable

# Note: Vite proxy is configured in vite.config.ts to proxy /api requests to the backend,
# avoiding CORS issues in development. Ensure backend runs on the port specified in VITE_API_URL.

# =====================================================================
# PRODUCTION INTEGRATIONS (Phase 4)
# =====================================================================

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
# Leave empty to disable error tracking
VITE_SENTRY_DSN=

# Intercom Customer Support
# Get your App ID from: https://app.intercom.com/a/apps/_/settings/web
# Leave empty to disable customer support chat
VITE_INTERCOM_APP_ID=

# Stripe Payment Processing
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_...) for development, live keys (pk_live_...) for production
VITE_STRIPE_PUBLISHABLE_KEY=

# =====================================================================
# FEATURE FLAGS
# =====================================================================

VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_WORKFLOW_ENGINE=true
VITE_ENABLE_MULTI_TENANCY=true

# =====================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =====================================================================

# Google Analytics
# VITE_GA_TRACKING_ID=

# Mixpanel
# VITE_MIXPANEL_TOKEN=

# LogRocket Session Replay
# VITE_LOGROCKET_APP_ID=