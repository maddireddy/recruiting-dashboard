# Server Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Database
MONGODB_URI=mongodb://localhost:27017/recruitpro

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=recruitpro-uploads

# SendGrid (Optional - for email)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES (Optional - for email)
AWS_SES_ACCESS_KEY=your-ses-access-key
AWS_SES_SECRET_KEY=your-ses-secret-key

# Mailgun (Optional - for email)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Custom SMTP (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
